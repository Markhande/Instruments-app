<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_key_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/black_key_border" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/black_key_pressed"
                android:endColor="#FF606060"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_key_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/black_key_border" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="#FF2C2C2C"
                android:endColor="@color/black_key_bg"
                android:angle="90" />
        </shape>
    </item>
</selector>