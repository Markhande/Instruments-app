<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/piano_button_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/piano_button_border" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/piano_button_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/piano_button_border" />
            <corners android:radius="6dp" />
            <gradient
                android:startColor="@color/piano_button_highlight"
                android:endColor="@color/piano_button_bg"
                android:angle="90" />
        </shape>
    </item>
</selector>