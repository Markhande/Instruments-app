<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_key_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/white_key_border" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/white_key_pressed"
                android:endColor="#FFCCCCCC"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_key_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/white_key_border" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/white_key_bg"
                android:endColor="#FFF0F0F0"
                android:angle="90" />
        </shape>
    </item>
</selector>